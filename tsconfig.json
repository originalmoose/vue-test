{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "lib": [
      "dom",
      "es5",
      "es2015",
      "es2015.promise"
    ],
    "noImplicitAny": false,
    "module": "es2015",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "target": "es5",
    "types": [
      "node",
      "vue-typescript-import-dts"
    ]
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}